}

////////////////////////////////////////////////////////////////////
//     Function: PhysxCloth::ls
//       Access: Published
//  Description: 
////////////////////////////////////////////////////////////////////
INLINE void PhysxCloth::
ls(ostream &out, int indent_level) const {

  indent(out, indent_level) << get_type().get_name()
                            << " " << _name
                            << " (at 0x" << this << ")";

  if (_node) {
    out << " N:0x" << _node;
  }

  out << "\n";
}

