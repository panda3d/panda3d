////////////////////////////////////////////////////////////////////
//     Function: set_factory
//       Access: Public
////////////////////////////////////////////////////////////////////
INLINE void ParticleSystem::
set_factory(BaseParticleFactory *f) {
  int pool_size = _particle_pool_size;
  set_pool_size(0);
  _factory = f;
  clear_physics_objects();
  set_pool_size(pool_size);
}

