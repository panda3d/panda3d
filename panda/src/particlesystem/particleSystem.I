////////////////////////////////////////////////////////////////////
//     Function: set_birth_rate
//       Access: Public
////////////////////////////////////////////////////////////////////
INLINE void ParticleSystem::
set_birth_rate(PN_stdfloat new_br) {
  _birth_rate = new_br;
  _cur_birth_rate = _birth_rate;
  if(IS_NEARLY_ZERO(_birth_rate)) _birth_rate = NEARLY_ZERO(PN_stdfloat);
}

