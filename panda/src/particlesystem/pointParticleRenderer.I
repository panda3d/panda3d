//       Access: Public
////////////////////////////////////////////////////////////////////
INLINE void PointParticleRenderer::
set_point_size(PN_stdfloat point_size) {
  _point_size = point_size;
  _thick = RenderModeAttrib::make(RenderModeAttrib::M_unchanged, _point_size);
}

