/* Main Style all others inherit from */
default_style { 
        fore: #000000; 
        back: #F6F6F6; 
        face: %(primary)s; 
        size: %(size)d;
}

brace_good {
        fore: #FFFFFF;
        back: #0000FF;
        modifiers: bold;
}

